package net.gellien.vavr

import io.vavr.*
import io.vavr.collection.*
import io.vavr.concurrent.*
import io.vavr.control.*
static import org.hamcrest.core.*


public class ListSpecification extends Specification {
	
	def "verify extraction of first list element" {
		given: "a list of three elements"
		List<Integer> list1 = List.of(1, 2, 3);

		when: "extracting first element"
		List<Integer> result = list1.tail()

		then: "a new List with the two last elements is returned"
		assertThat(result.size(), is(sizeOf(2)))
		assertThat(result, is(equalTo([2,3])))
	}
}